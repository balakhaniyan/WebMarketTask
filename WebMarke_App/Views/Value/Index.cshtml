@model IEnumerable<FildeValue>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black">لیست مقدار ها</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Value" asp-action="upsert" class="btn btn-outline-dark">ایجاد مقدار جدید</a>
        </div>
    </div>
    <br />
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    نام مقدار
                </th>
                <th>
                    محصول
                </th>
                <th>
                    فیلد
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Value
                    </td>
                    <td width="50%">
                        @obj.ProductId
                    </td>
                    <td width="50%">
                        @obj.FildeId
                    </td>
                    <td>
                        <div class="m-75 btn-group" role="group">
                            <a asp-controller="Value" asp-action="upsert" asp-route-id="@obj.Id">
                                ویرایش
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="m-75 btn-group" role="group">
                            <a asp-controller="value" asp-action="delete" asp-route-id="@obj.Id">
                                حذف
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

